@{
    ViewBag.Title = "Inicio";
}

<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script type="text/javascript" src="https://www.google.com/jsapi"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>

<script type="text/javascript">



        google.charts.load('current', { 'packages': ['corechart'] });
        google.charts.setOnLoadCallback(function () {
            var title = '@Model.Title';
            var subtitle = '@Model.Subtitle';
            var dataTable = new google.visualization.DataTable(
                @Html.Raw(Json.Encode(Model.DataTable))
            );

            drawChart2('chart1', title, subtitle, dataTable);
        });


    function drawChart2(elementId, title, subtitle, dataTable) {
            var options = {
                chart: {
                    title: title,
                    hAxis: { title: 'Dia', titleTextStyle: { color: '#333' } },
                    vAxis: { minValue: 0 }

                }
            };

            var chart = new google.visualization.AreaChart(document.getElementById(elementId));

            chart.draw(dataTable, options);
        }


        google.charts.load('current', { 'packages': ['corechart'] });
        google.charts.setOnLoadCallback(function () {
            var title = '@Model.Title';
            var subtitle = '@Model.Subtitle';
            var dataTable = new google.visualization.DataTable(
                @Html.Raw(Json.Encode(Model.DataTable2))
            );

            drawChart2('chart2', title, subtitle, dataTable);
        });

        function drawChart2(elementId, title, subtitle, dataTable) {
            var options = {
                chart: {
                    title: title,
                    hAxis: { title: 'Mes', titleTextStyle: { color: '#333' } },
                    vAxis: { minValue: 0 }

                }
            };

            var chart = new google.visualization.AreaChart(document.getElementById(elementId));

            chart.draw(dataTable, options);
        }



        $(window).resize(function () {

            drawChart();
            drawChart2();
             });

</script>



<div class="row">

    <div class="col-md-12 text-center">
        <h1>Tendencia Acumulada  Mes en Curso Dia a Dia</h1>
    </div>
    <div class="col-md-4 col-md-offset-4">
        <hr />
    </div>
    <div class="clearfix"></div>

        <div id="chart1" class="chart"></div>
  
</div>
<div class="row">

    <div class="col-md-12 text-center">
        <h1>Tendencia Acumulada por Año</h1>
    </div>
    <div class="col-md-4 col-md-offset-4">
        <hr />
    </div>
    <div class="clearfix"></div>
        <div id="chart2" class="chart"></div>
